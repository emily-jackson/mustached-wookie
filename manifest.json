{
  "name": "Add JIRA Links to Desk",
  "version": "0.1",
  "manifest_version": 2,
  "description": "Creates a link to PDT/CCE issues next to those fields in Desk",
  "homepage_url": "http://sanger.dk/",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "permissions": [
    "https://pardot.desk.com/agent*"
  ],
  "content_scripts": [
    {
      "include_globs": [ "https://pardot.desk.com/*" ],
      "matches": [ "http://*/*", "https://*/*" ],
      "run_at": "document_idle",
      "js": [ "src/inject/inject.js" ],
      "css": [
        "src/inject/inject.css"
      ]
    }]
}